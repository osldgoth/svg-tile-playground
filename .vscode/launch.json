{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox against localhost",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [{
        "url": "webpack:///src/",
        "path": "${workspaceFolder}/src"
      }],
      "reloadOnChange": {
        "watch": [ "${workspaceFolder}/src/*.js" ],
        "ignore": [ "${workspaceFolder}/node_modules/**", "${workspaceFolder}/.vscode/**" ]
      },
      "clearConsoleOnReload": true
    }
  ]
}